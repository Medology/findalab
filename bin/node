#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
ROOT="$(cd "${DIR}"/../ && pwd)"

. "${ROOT}"/docker/lib/docker_host_user_id.sh
. "${ROOT}"/docker/lib/images.sh
. "${DIR}"/lib/rm.sh
. "${DIR}"/lib/tty.sh

docker run \
    -e LOCAL_USER_ID=${DOCKER_HOST_USER_ID} \
    --env-file "${ROOT}"/docker/.env \
    -i${TTY} \
    ${RM} \
    -v $(pwd):/workdir \
    ${NODE_IMAGE} node "$@"
