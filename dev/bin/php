#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

. "${DIR}"/lib/args.sh

COMMAND="echo pid1 > /dev/null && php $ARGS"

docker run -u=1000 -it -v $(pwd):/data -w /data --rm --net findalab_default \
    --link web:findalab.local \
    medology/findalab-php:2016-09-09 "${COMMAND}"
